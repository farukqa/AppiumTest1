[alias]
show-user = !git config --global --get user.name && git config --global --get user.email
set-user = config --global --add user.name
set-email = config --global --add user.email
ignore-proj-files = !git update-index --skip-worktree ./pom.xml ./.idea/.gitignore ./.idea/compiler.xml ./.idea/encodings.xml ./.idea/jarRepositories.xml ./.idea/misc.xml ./.idea/runConfigurations.xml ./.idea/vcs.xml ./.idea/workspace.xml
dont-ignore-proj-files = !git update-index --no-skip-worktree ./pom.xml ./.idea/.gitignore ./.idea/compiler.xml ./.idea/encodings.xml ./.idea/jarRepositories.xml ./.idea/misc.xml ./.idea/runConfigurations.xml ./.idea/vcs.xml ./.idea/workspace.xml
